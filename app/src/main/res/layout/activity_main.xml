<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:background="#0F171D">
    <ImageView
       android:layout_width="120dp"
       android:layout_height="100dp"
       android:layout_gravity="center"
       android:src="@mipmap/logo"/>
    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/inicio"
                android:backgroundTint="#0F171D" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/originals"
                android:backgroundTint="#0F171D"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/series"
                android:backgroundTint="#0F171D"/>
            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pel_culas"
                android:backgroundTint="#0F171D"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/infantil"
                android:backgroundTint="#0F171D"/>


        </LinearLayout>
    </HorizontalScrollView>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/elpueblo"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:src="@mipmap/elpueblo"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/tvSeries"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="30dp"
            android:layout_marginRight="20dp"
            android:text="Series Amazon Originals y exclusivas"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <HorizontalScrollView
                android:id="@+id/series"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/tread"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:src="@mipmap/tread"/>
                    <ImageView
                        android:id="@+id/star"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:src="@mipmap/star"/>
                    <ImageView
                        android:id="@+id/robot"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:src="@mipmap/robot"/>
                </LinearLayout>

            </HorizontalScrollView>

        </LinearLayout>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:text="Sigue tus series y peliculas"
            android:textColor="@color/white"
            android:textSize="20sp"
            android:layout_marginTop="30dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/peliculas">

            <HorizontalScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp">
                <LinearLayout

                    android:layout_width="wrap_content"
                    android:layout_height="match_parent">
                    <ImageView
                        android:id="@+id/l100"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:src="@mipmap/l100"/>
                    <ImageView
                        android:id="@+id/matrix"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:src="@mipmap/matrix"/>
                    <ImageView
                        android:id="@+id/startup"
                        android:layout_width="200dp"
                        android:layout_height="200dp"
                        android:src="@mipmap/startup"/>
                </LinearLayout>

            </HorizontalScrollView>

        </LinearLayout>


    </LinearLayout>
    </ScrollView>
    </LinearLayout>
